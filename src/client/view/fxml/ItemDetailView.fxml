<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.controller.customer.ItemDetailViewController" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4; -fx-alignment: CENTER; -fx-arc-width: 500">
    <Label text="Item Details" style="-fx-font-size: 24px;  -fx-text-fill: #333;" />
    <Label text="Title Name:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555;" />
    <Label fx:id="titleLabel" style="-fx-font-size: 16px; -fx-text-fill: #555;;" />
    <Label text="Author:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555;" />
    <Label fx:id="authorLabel" style="-fx-font-size: 16px; -fx-text-fill: #555;" />
    <Label text="Price:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555;" />
    <Label fx:id="priceLabel" style="-fx-font-size: 16px; -fx-text-fill: #555;" />
    <Label text="Description:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555;" />
    <Label fx:id="descriptionLabel" style="-fx-font-size: 14px; -fx-text-fill: #333; -fx-background-color: #fff; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1;" />
    <ImageView fx:id="imageView" fitWidth="200" fitHeight="200" preserveRatio="true" style="-fx-border-color: #cccccc; -fx-border-width: 1;" />
    <Label text="Quantity:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555;" />
    <Spinner fx:id="quantitySpinner" style="-fx-pref-width: 80;" />
    <Button text="Add to Cart" onAction="#handleAddToCart" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-pref-width: 120;" />
    <Button text="Go to Cart" onAction="#handleGoToCart" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-pref-width: 120;" />
    <Button text="Back" onAction="#handleBack" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-pref-width: 120;" />
</VBox>
