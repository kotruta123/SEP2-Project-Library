<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.FileChooser?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="client.view.controller.moderator.EditGenreViewController" spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
    <children>
        <Label text="Edit Genre" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />
        <TextField fx:id="nameField" promptText="Name" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-pref-width: 300;" />
        <TextField fx:id="imageField" promptText="Image Path" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-pref-width: 300;" />
        <Button text="Choose Image" onAction="#handleChooseImage" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px; -fx-pref-width: 300;" />
        <Button text="Save" onAction="#handleSave" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px; -fx-pref-width: 300;" />
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px; -fx-pref-width: 300;" />
    </children>
</VBox>
