<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.controller.customer.ItemListViewController" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4; -fx-pref-width: 500;">
    <ListView fx:id="itemListView" onMouseClicked="#handleItemSelected" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10;" />
    <Button text="Go to Item Type Selection" onAction="#handleGoToItemTypeSelection" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-pref-width: 200;" />
</VBox>
