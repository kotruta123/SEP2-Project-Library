<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="client.view.controller.moderator.AddGenreViewController" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
    <children>
        <Label text="Add New Genre" style="-fx-font-size: 24px; -fx-text-fill: #333;" />

        <HBox spacing="10">
            <Label text="Name:" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
            <TextField fx:id="nameField" promptText="Enter genre name" style="-fx-pref-width: 300;" />
        </HBox>

        <HBox spacing="10">
            <Label text="Image File:" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
            <Button onAction="#handleChooseFile" text="Choose File" style="-fx-background-color: #0066cc; -fx-text-fill: white;" />
        </HBox>

        <TextField fx:id="imageField" editable="false" promptText="No file chosen" style="-fx-pref-width: 300; -fx-background-color: #e0e0e0; -fx-text-fill: #333;" />

        <HBox spacing="10">
            <Button onAction="#handleAddGenre" text="Add Genre" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-pref-width: 100;" />
            <Button onAction="#handleCancel" text="Cancel" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-pref-width: 100;" />
        </HBox>
    </children>
</VBox>
