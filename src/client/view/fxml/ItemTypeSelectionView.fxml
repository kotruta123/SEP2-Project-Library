<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="client.view.controller.customer.ItemTypeSelectionViewController" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4; -fx-alignment: CENTER;">
    <Label text="Select Item Type" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />
    <ListView fx:id="itemTypeListView" onMouseClicked="#handleItemTypeSelected" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1;" />
    <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-pref-width: 120;" />
</VBox>
