<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.controller.moderator.ModeratorMainViewController" style="-fx-padding: 20; -fx-background-color: #f4f4f4; -fx-alignment: CENTER;" spacing="10">
    <children>
        <Button text="Manage Users" onAction="#handleManageUsers" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-pref-width: 300; -fx-font-size: 14px; -fx-padding: 10;" />
        <Button text="Manage Genres" onAction="#handleManageGenres" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-pref-width: 300; -fx-font-size: 14px; -fx-padding: 10;" />
        <Button text="Manage Items" onAction="#handleManageItems" style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-pref-width: 300; -fx-font-size: 14px; -fx-padding: 10;" />
        <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-pref-width: 300; -fx-font-size: 14px; -fx-padding: 10;" />
    </children>
</VBox>
