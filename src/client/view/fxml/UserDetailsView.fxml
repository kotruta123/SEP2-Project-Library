<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.controller.moderator.UserDetailsViewController" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4; -fx-alignment: CENTER;">
    <children>
        <Label text="User Details" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />
        <Label text="Details:" style="-fx-font-size: 16px; -fx-text-fill: #555;" />
        <Label fx:id="userDetailsLabel" style="-fx-font-size: 14px; -fx-text-fill: #333; -fx-background-color: #fff; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1;" />
        <Button text="Delete User" onAction="#handleDeleteUser" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-pref-width: 120;" />
        <Button text="Close" onAction="#handleClose" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-pref-width: 120;" />
    </children>
</VBox>
